<p class="flow-text question">
    <%= q.question %>
</p>

<% if ( q.img != undefined && q.img.length > 0 ) { %>
<div class="col s12 center">
    <img src="images/<%= q.img %>" alt="No image found" id="quizImg">
</div>
<% } %>


<% if ( q.code != undefined && q.code.length > 0 ) { %>
<pre>
<code>
<%= q.code %>
</code>
</pre>
<% } %>
<% if ( q.options != undefined  ) { %>
<div class="col s12">

    <input name="<%= q.id %>" type="radio" value="" hidden checked />

</div>



<div class="col s12">
    
            <input name="<%= q.id %>" type="radio" value="<%= q.options[0] %>" id="<%= q.id%>1"  />
            <label for="<%= q.id%>1">
                <%= q.options[0] %></label >
        
        
        </div>
        <div class="col s12">
                <label for="<%= q.id%>2">
                        <%= q.options[1] %></label >
            <input name="<%= q.id %>" type="radio" value="<%= q.options[1] %>" id="<%= q.id%>2" />
            
        
        </div>
        <div class="col s12">
    
            <input name="<%= q.id %>" type="radio" value="<%= q.options[2] %>" id="<%= q.id%>3" />
            <label for="<%= q.id%>3">
                <%= q.options[2] %></label >
        
        </div>
        <div class="col s12">
    
            <input name="<%= q.id %>" type="radio" value="<%= q.options[3] %>"  id="<%= q.id%>4"/>
            <label for="<%= q.id%>4">
                <%= q.options[3] %></label >
        
</div>
<%}%>

<% if ( q.Studentanswer != undefined ) { %>
<div class="col s12  amber lighten-5">
    <p class="flow-text"> Your answer :
        <%=q.Studentanswer%>
    </p>
</div>
<%}%>

<% if ( q.solution != undefined  ) { %>
<div class="col s12 green lighten-4">
    <p class="flow-text"> Correct answer :
        <%=q.solution%>
    </p>
</div>
<%}%>


<div class="divider"></div>