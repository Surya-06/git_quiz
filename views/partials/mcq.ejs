<p class="flow-text question">
    <%= q.question %>
</p>

<% if ( q.img != undefined && q.img.length > 0 ) { %>
<div class="col s12 center">
    <img src="images/<%= q.img %>" alt="No image found" id="quizImg">
</div>
<% } %>


<% if ( q.code != undefined && q.code.length > 0 ) { %>
<pre>
<code>
<%= q.code %>
</code>
</pre>
<% } %>
<table>
    <% if ( q.options != undefined  ) { %>
    <tr>
        <td>
            <input name="<%= q.id %>" type="radio" value="<%= q.options[0] %>" />
        </td>
        <td>
            <%= q.options[1] %>
        </td>
    </tr>
    <tr>
        <td>
            <input name="<%= q.id %>" type="radio" value="<%= q.options[1] %>" />
        </td>
        <td>
            <%= q.options[1] %>
        </td>
    </tr>
    <tr>
        <td>
            <input name="<%= q.id %>" type="radio" value="<%= q.options[2] %>" />
        </td>
        <td>
            <%= q.options[2] %>
        </td>
    </tr>
    <tr>
        <td>
            <input name="<%= q.id %>" type="radio" value="<%= q.options[3] %>" />
        </td>
        <td>
            <%= q.options[3] %>
        </td>
    </tr>
    <%}%>
</table>

<% if ( q.Studentanswer != undefined ) { %>
    <div class="col s12  amber lighten-5">
        <p class="flow-text"> Your answer :
            <%=q.Studentanswer%>
        </p>
    </div>
    <%}%>

<% if ( q.solution != undefined  ) { %>
    <div class="col s12 green lighten-4">
        <p class="flow-text"> Correct answer :
            <%=q.solution%>
        </p>
    </div>
    <%}%>


<div class="divider"></div>