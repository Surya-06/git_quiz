<p class="flow-text question">
    <%= q.question %> 
</p>

<% if ( q.img != undefined && q.img.length > 0 ) { %>
<div class="col s12 center">
    <img src="images/<%= q.img %>" alt="No image found" id="quizImg" >
</div>
<% } %>


<% if ( q.code != undefined && q.code.length > 0 ) { %>
<pre>
<code>
<%= q.code %>
</code>
</pre>
<% } %>
<% if ( q.options != undefined && q.options.length > 0 ) { %>

    <div class="col s12">
        <label>
            <input  name="<%= q.id %>" type="radio" value="<%= q.options[0] %>" />
            <span>
                <%= q.options[0] %></span>
        </label>
    </div>
    <div class="col s12">
        <label>
            <input  name="<%= q.id %>" type="radio" value="<%= q.options[1] %>" />
            <span>
                <%= q.options[1] %></span>
        </label>
    </div>
    <div class="col s12">
        <label>
            <input  name="<%= q.id %>" type="radio" value="<%= q.options[2] %>" />
            <span>
                <%= q.options[2] %></span>
        </label></div>
    <div class="col s12">
        <label>
            <input  name="<%= q.id %>" type="radio" value="<%= q.options[3] %>" />
            <span>
                <%= q.options[3] %></span>
        </label>
    </div>
<%}%>

<% if ( q.Studentanswer != undefined && q.Studentanswer.length > 0 ) { %>
    <div class="col s12 ">
        <p class="flow-text"> Your answer : <%=q.Studentanswer%></p>
    </div>
    <%}%>

    <% if ( q.solution != undefined && q.solution.length > 0 ) { %>
        <div class="col s12">
            <p class="flow-text"> Correct answer : <%=q.solution%></p>
        </div>
        <%}%>


<div class="divider"></div>